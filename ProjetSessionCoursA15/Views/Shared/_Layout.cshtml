<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bienvenue Baobab-Immo</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Acceuil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Location", "Index", "Location", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Vente", "Index", "Location", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Projet", "Index", "Location", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Construction", "Index", "Location", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Outils", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Contact", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-header pull-right">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
          
                    @Html.ActionLink("Se Connecter", "Login", "Authentication", new { area = "" }, new { @class = "navbar-brand" })
            
                
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BAOBAB IMMOBILIER</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>